<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-2">
  <%= if is_nil(@remote_actor) do %>
    <!-- Loading state when actor hasn't been fetched yet -->
    <.z_nav active_tab="timeline" />
    <%= if @error do %>
      <div class="flex justify-center items-center py-20">
        <div class="text-center">
          <.icon name="hero-exclamation-triangle" class="w-16 h-16 mx-auto mb-4 text-error" />
          <p class="text-lg font-medium">{@error}</p>
          <.link navigate={~p"/timeline"} class="btn btn-ghost btn-sm mt-4">
            Back to Timeline
          </.link>
        </div>
      </div>
    <% else %>
      <!-- Profile skeleton loader -->
      <div class="mb-4">
        <div class="skeleton h-8 w-40"></div>
      </div>
      <div class="space-y-6">
        <!-- Profile header skeleton -->
        <.profile_skeleton />
        <!-- Posts skeleton -->
        <div class="space-y-4">
          <.post_skeleton />
          <.post_skeleton />
          <.post_skeleton />
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- Z Platform Navigation -->
    <.z_nav active_tab={
      if @remote_actor.actor_type == "Group", do: "discussions", else: "timeline"
    } />
    
<!-- Back Button -->
    <div class="mb-4">
      <%= if @remote_actor.actor_type == "Group" do %>
        <.link navigate={~p"/communities"} class="btn btn-ghost btn-sm gap-2">
          <.icon name="hero-arrow-left" class="w-4 h-4" /> Back to Communities
        </.link>
      <% else %>
        <.link navigate={~p"/timeline"} class="btn btn-ghost btn-sm gap-2">
          <.icon name="hero-arrow-left" class="w-4 h-4" /> Back to Timeline
        </.link>
      <% end %>
    </div>

    <%= if @remote_actor.actor_type == "Group" do %>
      <!-- COMMUNITY VIEW (Lemmy-style) -->
    <!-- Community Header Banner -->
      <div class="card border border-base-300 rounded-lg overflow-hidden mb-4">
        <!-- Cover Photo -->
        <div class="h-32 sm:h-40 relative">
          <%= if @remote_actor.header_url do %>
            <img src={@remote_actor.header_url} alt="" class="w-full h-full object-cover" />
          <% else %>
            <div class="w-full h-full bg-gradient-to-r from-secondary/30 to-primary/30"></div>
          <% end %>
          <!-- Overlay gradient -->
          <div class="absolute inset-0 bg-gradient-to-t from-base-100 to-transparent"></div>
        </div>
        
<!-- Community Info Bar -->
        <div class="px-4 sm:px-6 pb-4 -mt-12 relative z-10">
          <div class="flex items-end gap-4">
            <!-- Avatar -->
            <div class="ring-4 ring-base-100 rounded-lg bg-base-100">
              <%= if @remote_actor.avatar_url do %>
                <img
                  src={@remote_actor.avatar_url}
                  alt={@remote_actor.username}
                  class="w-20 h-20 sm:w-24 sm:h-24 rounded-lg object-cover"
                />
              <% else %>
                <.placeholder_avatar size="3xl" icon="hero-user-group" class="rounded-lg" />
              <% end %>
            </div>
            
<!-- Name and Handle -->
            <div class="flex-1 min-w-0 pb-1">
              <h1 class="text-xl sm:text-2xl font-bold truncate">
                {raw(
                  render_display_name_with_emojis(
                    @remote_actor.display_name || @remote_actor.username,
                    @remote_actor.domain
                  )
                )}
              </h1>
              <div class="text-sm opacity-70">
                !{@remote_actor.username}@{@remote_actor.domain}
              </div>
              <%= if @instance_info do %>
                <% software = Elektrine.ActivityPub.Instance.software_name(@instance_info) %>
                <%= if software do %>
                  <div class="flex items-center gap-1.5 mt-0.5 text-xs opacity-60">
                    <%= if @instance_info.favicon do %>
                      <img
                        src={@instance_info.favicon}
                        alt=""
                        class="w-3.5 h-3.5 rounded-sm"
                        loading="lazy"
                        onerror="this.style.display='none'"
                      />
                    <% end %>
                    <span class="capitalize">{software}</span>
                  </div>
                <% end %>
              <% end %>
            </div>
            
<!-- Action Buttons -->
            <div class="flex gap-2 pb-1">
              <%= if @current_user do %>
                <button
                  phx-click="toggle_follow"
                  class={[
                    "btn btn-sm",
                    cond do
                      @is_following -> "btn-outline btn-secondary"
                      @is_pending -> "btn-outline btn-warning"
                      true -> "btn-secondary"
                    end
                  ]}
                >
                  <%= cond do %>
                    <% @is_following -> %>
                      <.icon name="hero-check" class="w-4 h-4 mr-1" /> Joined
                    <% @is_pending -> %>
                      <.spinner size="sm" class="mr-1" /> Pending
                    <% true -> %>
                      <.icon name="hero-plus" class="w-4 h-4 mr-1" /> Join
                  <% end %>
                </button>
              <% end %>
              <a
                href={@remote_actor.uri}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-sm btn-ghost"
              >
                <.icon name="hero-arrow-top-right-on-square" class="w-4 h-4" />
              </a>
            </div>
          </div>
        </div>
      </div>
      
<!-- Two Column Layout -->
      <div class="flex flex-col lg:flex-row gap-4">
        <!-- Main Content -->
        <div class="flex-1 min-w-0">
          <!-- Create Post Card -->
          <%= if @current_user do %>
            <div class="card border border-base-300 rounded-lg p-4 mb-4">
              <div class="flex items-center gap-3">
                <.user_avatar user={@current_user} size="sm" />
                <button
                  phx-click="toggle_create_post"
                  class="flex-1 input input-bordered text-left text-base-content/50 cursor-pointer hover:border-secondary transition-colors"
                >
                  Create a post...
                </button>
                <button phx-click="toggle_create_post" class="btn btn-secondary btn-sm">
                  <.icon name="hero-pencil-square" class="w-4 h-4" />
                </button>
              </div>
            </div>
          <% end %>
          
<!-- Sort Controls -->
          <%= if !@loading && (!Enum.empty?(@timeline_posts) || !Enum.empty?(@local_posts)) do %>
            <div class="flex items-center gap-2 mb-4 bg-base-200 border border-base-300 rounded-lg p-2">
              <span class="text-sm font-medium opacity-70 px-2">Sort:</span>
              <div class="flex gap-1 flex-wrap">
                <button
                  phx-click="change_sort"
                  phx-value-sort="hot"
                  class={[
                    "btn btn-sm",
                    if(@sort_by == "hot", do: "btn-primary", else: "btn-ghost")
                  ]}
                >
                  <.icon name="hero-fire" class="w-4 h-4 mr-1" /> Hot
                </button>
                <button
                  phx-click="change_sort"
                  phx-value-sort="top"
                  class={[
                    "btn btn-sm",
                    if(@sort_by == "top", do: "btn-primary", else: "btn-ghost")
                  ]}
                >
                  <.icon name="hero-arrow-trending-up" class="w-4 h-4 mr-1" /> Top
                </button>
                <button
                  phx-click="change_sort"
                  phx-value-sort="new"
                  class={[
                    "btn btn-sm",
                    if(@sort_by == "new", do: "btn-primary", else: "btn-ghost")
                  ]}
                >
                  <.icon name="hero-clock" class="w-4 h-4 mr-1" /> New
                </button>
                <button
                  phx-click="change_sort"
                  phx-value-sort="active"
                  class={[
                    "btn btn-sm",
                    if(@sort_by == "active", do: "btn-primary", else: "btn-ghost")
                  ]}
                >
                  <.icon name="hero-chat-bubble-left-right" class="w-4 h-4 mr-1" /> Active
                </button>
              </div>
            </div>
          <% end %>
          
<!-- Posts Feed -->
          <% # Combine and sort all posts
          all_posts = @local_posts ++ @timeline_posts
          sorted_posts = ElektrineWeb.RemoteUserLive.Show.sort_posts(all_posts, @sort_by) %>
          <div
            class="space-y-3"
            phx-hook="InfiniteScroll"
            id="remote-profile-infinite-scroll"
            data-offset="500"
          >
            <%= if @loading do %>
              <%= for _ <- 1..3 do %>
                <.post_skeleton />
              <% end %>
            <% end %>

            <%= if @error do %>
              <div class="alert alert-error">
                <.icon name="hero-exclamation-triangle" class="w-5 h-5" />
                <span>{@error}</span>
              </div>
            <% end %>

            <%= if !@loading && Enum.empty?(sorted_posts) && !@error do %>
              <div class="card border border-base-300 rounded-lg text-center py-12 px-4">
                <.icon name="hero-inbox" class="w-16 h-16 mx-auto mb-4 opacity-30" />
                <p class="opacity-70">No posts yet</p>
                <p class="text-sm opacity-50 mt-2">Be the first to post in this community!</p>
              </div>
            <% end %>
            
<!-- Sorted Posts (combined local and remote) -->
            <%= for post <- sorted_posts do %>
              <%= if Map.has_key?(post, :__struct__) do %>
                <!-- Local Post (Ecto schema) -->
                <% # Get platform-specific counts if available
                lemmy_post_counts = Map.get(@lemmy_counts, post.activitypub_id, %{})

                mastodon_post_counts =
                  Map.get(assigns[:mastodon_counts] || %{}, post.activitypub_id, %{})

                display_score =
                  [
                    Map.get(lemmy_post_counts, :score),
                    Map.get(mastodon_post_counts, :favourites_count),
                    post.like_count || 0
                  ]
                  |> Enum.map(&(&1 || 0))
                  |> Enum.max(fn -> 0 end)

                display_comment_count =
                  [
                    Map.get(lemmy_post_counts, :comments),
                    Map.get(mastodon_post_counts, :replies_count),
                    length(Map.get(@post_replies, post.activitypub_id, [])),
                    post.reply_count || 0
                  ]
                  |> Enum.map(&(&1 || 0))
                  |> Enum.max(fn -> 0 end)

                # Share count (used in Mastodon view, not Lemmy community view)
                _display_share_count =
                  [
                    Map.get(mastodon_post_counts, :reblogs_count),
                    post.share_count || 0
                  ]
                  |> Enum.map(&(&1 || 0))
                  |> Enum.max(fn -> 0 end)

                _local_replies = Map.get(@post_replies, post.activitypub_id, [])
                # Filter to actual image URLs (not blog links, etc.)
                image_urls =
                  (post.media_urls || [])
                  |> Enum.filter(fn url ->
                    is_binary(url) &&
                      (String.match?(url, ~r/\.(jpe?g|png|gif|webp|svg|bmp|avif)(\?.*)?$/i) ||
                         String.match?(
                           url,
                           ~r/(\/media\/|\/images\/|\/uploads\/|\/pictrs\/|i\.imgur|pbs\.twimg|i\.redd\.it)/i
                         ))
                  end)

                has_image = !Enum.empty?(image_urls)

                has_poll =
                  post.post_type == "poll" && Ecto.assoc_loaded?(post.poll) && post.poll

                # Check if this is a reply
                is_reply =
                  post.reply_to_id != nil ||
                    (is_map(post.media_metadata) && post.media_metadata["inReplyTo"] != nil)

                has_quote =
                  post.quoted_message_id &&
                    Ecto.assoc_loaded?(post.quoted_message) &&
                    post.quoted_message

                # Detect external link submission
                external_link =
                  cond do
                    # Check metadata first
                    is_map(post.media_metadata) && post.media_metadata["external_link"] ->
                      post.media_metadata["external_link"]

                    # Check if activitypub_url differs from activitypub_id domain
                    is_binary(post.activitypub_url) && is_binary(post.activitypub_id) ->
                      url_host = URI.parse(post.activitypub_url).host
                      id_host = URI.parse(post.activitypub_id).host

                      if url_host && id_host && url_host != id_host,
                        do: post.activitypub_url,
                        else: nil

                    true ->
                      nil
                  end %>
                <article class={[
                  "card border border-base-300 rounded-lg overflow-hidden",
                  if(is_reply, do: "border-l-4 border-l-secondary/50", else: "")
                ]}>
                  <div
                    class="flex cursor-pointer"
                    phx-click="navigate_to_post"
                    phx-value-post_id={URI.encode_www_form(post.activitypub_id)}
                  >
                    <!-- Vote Column -->
                    <div
                      class="flex flex-col items-center p-2 bg-base-50 gap-1 w-10"
                      phx-click="stop_propagation"
                    >
                      <button
                        phx-click="like_post"
                        phx-value-post_id={post.activitypub_id}
                        class={[
                          "btn btn-ghost btn-xs btn-square",
                          if(
                            Map.get(
                              @post_interactions[post.activitypub_id] || %{},
                              :liked,
                              false
                            ),
                            do: "text-error",
                            else: "text-base-content/50 hover:text-error"
                          )
                        ]}
                      >
                        <.icon name="hero-arrow-up" class="w-4 h-4" />
                      </button>
                      <span class="text-xs font-bold">{display_score}</span>
                      <button class="btn btn-ghost btn-xs btn-square text-base-content/50 hover:text-primary">
                        <.icon name="hero-arrow-down" class="w-4 h-4" />
                      </button>
                    </div>
                    
<!-- Thumbnail for image posts or link icon for link submissions -->
                    <%= if has_image do %>
                      <div class="w-20 h-20 flex-shrink-0 m-2">
                        <img
                          src={ElektrineWeb.HtmlHelpers.thumbnail_url(hd(image_urls), 96)}
                          alt=""
                          class="w-full h-full object-cover rounded"
                          loading="lazy"
                        />
                      </div>
                    <% else %>
                      <%= if external_link do %>
                        <a
                          href={external_link}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="w-20 h-20 flex-shrink-0 m-2 bg-base-200 rounded flex items-center justify-center hover:bg-base-300 transition-colors"
                        >
                          <.icon name="hero-link" class="w-8 h-8 text-primary" />
                        </a>
                      <% end %>
                    <% end %>
                    
<!-- Post Content -->
                    <div class="flex-1 p-2 min-w-0">
                      <!-- Reply indicator -->
                      <%= if is_reply do %>
                        <div class="flex items-center gap-1 text-xs text-secondary mb-1">
                          <.icon name="hero-arrow-uturn-left" class="w-3 h-3" />
                          <span>Replying to a post</span>
                        </div>
                      <% end %>
                      
<!-- Title -->
                      <%= if post.media_metadata["name"] do %>
                        <%= if external_link do %>
                          <a
                            href={external_link}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="block"
                          >
                            <h3 class="font-medium text-sm mb-1 line-clamp-2 hover:text-primary flex items-center gap-1">
                              {post.media_metadata["name"]}
                              <.icon
                                name="hero-arrow-top-right-on-square"
                                class="w-3 h-3 flex-shrink-0"
                              />
                            </h3>
                          </a>
                        <% else %>
                          <h3 class="font-medium text-sm mb-1 line-clamp-2 hover:text-secondary">
                            {post.media_metadata["name"]}
                          </h3>
                        <% end %>
                      <% end %>
                      
<!-- Content preview -->
                      <%= if post.content && !post.media_metadata["name"] do %>
                        <div class="text-sm line-clamp-2 mb-1 break-words opacity-80">
                          {raw(render_remote_bio(post.content, @remote_actor.domain))}
                        </div>
                      <% end %>

                      <%= if has_poll do %>
                        <div class="mt-2 mb-2" phx-click="stop_propagation">
                          <ElektrineWeb.Components.Social.PollDisplay.poll_card
                            poll={post.poll}
                            message={post}
                            current_user={@current_user}
                            user_votes={[]}
                            interactive={false}
                          />
                        </div>
                      <% end %>

                      <%= if has_quote do %>
                        <% quoted = post.quoted_message

                        quote_author =
                          cond do
                            Ecto.assoc_loaded?(quoted.remote_actor) && quoted.remote_actor ->
                              "@#{quoted.remote_actor.username}@#{quoted.remote_actor.domain}"

                            Ecto.assoc_loaded?(quoted.sender) && quoted.sender ->
                              "@#{quoted.sender.handle || quoted.sender.username}"

                            true ->
                              "Quoted post"
                          end %>
                        <div class="mt-2 mb-2 p-2 rounded border border-base-300 bg-base-100/60">
                          <div class="text-xs opacity-70 mb-1">
                            <.icon
                              name="hero-chat-bubble-oval-left-ellipsis"
                              class="w-3 h-3 inline"
                            />
                            {quote_author}
                          </div>
                          <%= if quoted.content && quoted.content != "" do %>
                            <div class="text-xs line-clamp-2 break-words opacity-80">
                              {raw(render_remote_bio(quoted.content, @remote_actor.domain))}
                            </div>
                          <% else %>
                            <div class="text-xs opacity-60">Quoted post</div>
                          <% end %>
                        </div>
                      <% end %>
                      
<!-- Meta line -->
                      <div class="flex items-center gap-2 text-xs text-base-content/50">
                        <%= if post.remote_actor do %>
                          <.link
                            navigate={"/remote/#{post.remote_actor.username}@#{post.remote_actor.domain}"}
                            class="hover:underline"
                            phx-click="stop_propagation"
                          >
                            @{post.remote_actor.username}
                          </.link>
                          <span>·</span>
                        <% end %>
                        <.local_time
                          datetime={post.inserted_at}
                          format="relative"
                          timezone={assigns[:timezone] || "UTC"}
                        />
                        <span>·</span>
                        <span>{display_comment_count} comments</span>
                        <%= if post.activitypub_url do %>
                          <a
                            href={post.activitypub_url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="hover:text-primary ml-auto"
                            phx-click="stop_propagation"
                          >
                            <.icon name="hero-arrow-top-right-on-square" class="w-3 h-3" />
                          </a>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </article>
              <% else %>
                <!-- Outbox Post (fetched from remote) -->
                <% post_state =
                  Map.get(@post_interactions, post["id"], %{liked: false, like_delta: 0})

                is_liked = Map.get(post_state, :liked, false)
                like_delta = Map.get(post_state, :like_delta, 0)
                like_count = (get_collection_total_items(post["likes"]) || 0) + like_delta
                loaded_replies = Map.get(@post_replies, post["id"], [])
                loaded_reply_count = length(loaded_replies)

                # Get image URL if exists
                image_url =
                  cond do
                    post["image"] && is_map(post["image"]) ->
                      cond do
                        is_binary(post["image"]["url"]) -> post["image"]["url"]
                        is_map(post["image"]["url"]) -> post["image"]["url"]["href"]
                        true -> nil
                      end

                    post["attachment"] && is_list(post["attachment"]) &&
                        length(post["attachment"]) > 0 ->
                      first = hd(post["attachment"])
                      media_type = first["mediaType"] || ""

                      if String.starts_with?(media_type, "image/") do
                        cond do
                          is_binary(first["url"]) -> first["url"]
                          is_map(first["url"]) -> first["url"]["href"]
                          true -> nil
                        end
                      else
                        nil
                      end

                    true ->
                      nil
                  end

                # Detect external link for outbox posts (Lemmy link submissions)
                external_link_outbox =
                  if is_binary(post["url"]) && is_binary(post["id"]) do
                    url_host = URI.parse(post["url"]).host
                    id_host = URI.parse(post["id"]).host
                    if url_host && id_host && url_host != id_host, do: post["url"], else: nil
                  else
                    nil
                  end

                # Check if this is a reply
                is_reply_outbox = post["inReplyTo"] != nil

                quote_url =
                  post["quoteUrl"] || post["_misskey_quote"] ||
                    get_in(post, ["pleroma", "quote_uri"]) %>
                <article class={[
                  "card border border-base-300 rounded-lg overflow-hidden",
                  if(is_reply_outbox, do: "border-l-4 border-l-secondary/50", else: "")
                ]}>
                  <div
                    class="flex cursor-pointer"
                    phx-click="navigate_to_post"
                    phx-value-post_id={URI.encode_www_form(post["id"])}
                  >
                    <!-- Vote Column -->
                    <div
                      class="flex flex-col items-center p-2 bg-base-50 gap-1 w-10"
                      phx-click="stop_propagation"
                    >
                      <%= if @current_user do %>
                        <button
                          phx-click={if is_liked, do: "unlike_post", else: "like_post"}
                          phx-value-post_id={post["id"]}
                          class={[
                            "btn btn-ghost btn-xs btn-square",
                            if(is_liked,
                              do: "text-error",
                              else: "text-base-content/50 hover:text-error"
                            )
                          ]}
                        >
                          <.icon name="hero-arrow-up" class="w-4 h-4" />
                        </button>
                      <% else %>
                        <div class="text-base-content/30">
                          <.icon name="hero-arrow-up" class="w-4 h-4" />
                        </div>
                      <% end %>
                      <span class="text-xs font-bold">{like_count}</span>
                      <div class="text-base-content/30">
                        <.icon name="hero-arrow-down" class="w-4 h-4" />
                      </div>
                    </div>
                    
<!-- Thumbnail for image posts or link icon -->
                    <%= if image_url do %>
                      <div class="w-20 h-20 flex-shrink-0 m-2" phx-click="stop_propagation">
                        <button
                          type="button"
                          phx-click="open_image_modal"
                          phx-value-url={image_url}
                          phx-value-images={Jason.encode!([image_url])}
                          phx-value-index="0"
                          phx-value-post_id={post["id"]}
                          class="image-zoom-trigger w-full h-full rounded overflow-hidden"
                        >
                          <img
                            src={image_url}
                            alt=""
                            class="w-full h-full object-cover"
                            loading="lazy"
                          />
                        </button>
                      </div>
                    <% else %>
                      <%= if external_link_outbox do %>
                        <a
                          href={external_link_outbox}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="w-20 h-20 flex-shrink-0 m-2 bg-base-200 rounded flex items-center justify-center hover:bg-base-300 transition-colors"
                        >
                          <.icon name="hero-link" class="w-8 h-8 text-primary" />
                        </a>
                      <% end %>
                    <% end %>
                    
<!-- Post Content -->
                    <div class="flex-1 p-2 min-w-0">
                      <!-- Reply indicator -->
                      <%= if is_reply_outbox do %>
                        <div class="flex items-center gap-1 text-xs text-secondary mb-1">
                          <.icon name="hero-arrow-uturn-left" class="w-3 h-3" />
                          <span>Replying to a post</span>
                        </div>
                      <% end %>
                      
<!-- Title -->
                      <%= if post["name"] do %>
                        <%= if external_link_outbox do %>
                          <a
                            href={external_link_outbox}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="block"
                          >
                            <h3 class="font-medium text-sm mb-1 line-clamp-2 hover:text-primary flex items-center gap-1">
                              {post["name"]}
                              <.icon
                                name="hero-arrow-top-right-on-square"
                                class="w-3 h-3 flex-shrink-0"
                              />
                            </h3>
                          </a>
                        <% else %>
                          <h3 class="font-medium text-sm mb-1 line-clamp-2 hover:text-secondary">
                            {post["name"]}
                          </h3>
                        <% end %>
                      <% end %>
                      
<!-- Content preview (only if no title) -->
                      <%= if post["content"] && !post["name"] do %>
                        <div class="text-sm line-clamp-2 mb-1 break-words opacity-80">
                          {raw(render_remote_bio(post["content"], @remote_actor.domain))}
                        </div>
                      <% end %>
                      
<!-- Poll display -->
