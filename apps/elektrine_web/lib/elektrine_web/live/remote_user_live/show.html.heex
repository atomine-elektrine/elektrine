                      on_change="update_reply_content"
                      on_cancel="cancel_reply"
                      cancel_class="btn btn-ghost btn-xs"
                      submit_class="btn btn-secondary btn-xs"
                      submit_label="Reply"
                      submit_disable_with="Posting..."
                    />
                  <% end %>
                </article>
              <% end %>

              <%= for post <- @timeline_posts do %>
                <% quote_url =
                  post["quoteUrl"] || post["_misskey_quote"] ||
                    get_in(post, ["pleroma", "quote_uri"]) %>
                <article
                  class="px-4 py-4 hover:bg-base-50 transition-colors cursor-pointer"
                  phx-click="navigate_to_post"
                  phx-value-post_id={URI.encode_www_form(post["id"])}
                >
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-xs opacity-60">
                      {if post["published"], do: format_activitypub_date(post["published"])}
                    </span>
                  </div>

                  <%= if post["name"] do %>
                    <h3 class="font-bold text-base mb-2">{post["name"]}</h3>
                  <% end %>

                  <%= if post["content"] do %>
                    <div class="text-sm leading-relaxed mb-3">
                      {raw(render_remote_bio(post["content"], @remote_actor.domain))}
                    </div>
                  <% end %>
                  
<!-- Poll display -->
                  <%= if post["type"] == "Question" || post["oneOf"] || post["anyOf"] do %>
                    <div class="mb-3" phx-click="stop_propagation">
                      <ElektrineWeb.Components.Social.PollDisplay.poll_card
                        post={post}
                        remote_actor={@remote_actor}
                        current_user={@current_user}
                        interactive={false}
                      />
                    </div>
                  <% end %>

                  <%= if is_binary(quote_url) do %>
                    <a
                      href={quote_url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="mb-3 p-2 rounded border border-base-300 bg-base-100/60 inline-flex items-center gap-2 text-xs hover:border-primary transition-colors"
                      phx-click="stop_propagation"
                    >
                      <.icon name="hero-chat-bubble-oval-left-ellipsis" class="w-3 h-3" />
                      <span class="truncate max-w-[22rem]">Quoted post</span>
                      <.icon name="hero-arrow-top-right-on-square" class="w-3 h-3" />
                    </a>
                  <% end %>
                  
<!-- Post Actions -->
                  <% post_state =
                    Map.get(@post_interactions, post["id"], %{
                      liked: false,
                      boosted: false,
                      like_delta: 0,
                      boost_delta: 0
                    })

                  is_liked = Map.get(post_state, :liked, false)
                  is_boosted = Map.get(post_state, :boosted, false)
                  like_delta = Map.get(post_state, :like_delta, 0)
                  boost_delta = Map.get(post_state, :boost_delta, 0)

                  like_count =
                    max(
                      get_collection_total_items(post["likes"]) || 0,
                      get_collection_total_items(post["likesCount"]) || 0
                    ) + like_delta

                  boost_count =
                    max(
                      max(
                        get_collection_total_items(post["shares"]) || 0,
                        get_collection_total_items(post["sharesCount"]) || 0
                      ),
                      get_collection_total_items(post["announcesCount"]) || 0
                    ) + boost_delta

                  loaded_reply_count = length(Map.get(@post_replies, post["id"], []))

                  remote_reply_count =
                    max(
                      max(
                        get_collection_total_items(post["replies"]) || 0,
                        get_collection_total_items(post["comments"]) || 0
                      ),
                      get_collection_total_items(post["repliesCount"]) || 0
                    )

                  display_reply_count = max(loaded_reply_count, remote_reply_count)

                  quote_count =
                    max(
                      max(
                        get_collection_total_items(post["quoteCount"]) || 0,
                        get_collection_total_items(post["quote_count"]) || 0
                      ),
                      get_collection_total_items(get_in(post, ["pleroma", "quote_count"])) || 0
                    ) %>
                  <div class="flex items-center gap-6 mt-3 text-sm" phx-click="stop_propagation">
                    <.post_actions
                      post_id={post["id"]}
                      current_user={@current_user}
                      is_liked={is_liked}
                      is_boosted={is_boosted}
                      is_saved={Map.get(@user_saves, post["id"], false)}
                      like_count={like_count}
                      comment_count={display_reply_count}
                      boost_count={boost_count}
                      quote_count={quote_count}
                      on_comment="show_reply_form"
                      size={:sm}
                      style={:minimal}
                    />
                  </div>
                  
<!-- Reply Form -->
                  <%= if @show_reply_form && @reply_to_post && @reply_to_post["id"] == post["id"] do %>
                    <ElektrineWeb.Components.Social.RemotePostShared.inline_reply_form
                      wrapper_class="mt-3 pt-3 border-t border-base-300"
                      click_stop={true}
                      content={@reply_content}
                      textarea_class="textarea textarea-bordered textarea-sm w-full"
                      rows={3}
                      on_submit="submit_reply"
                      on_change="update_reply_content"
                      on_cancel="cancel_reply"
                      cancel_class="btn btn-ghost btn-xs"
                      submit_class="btn btn-secondary btn-xs"
                      submit_label="Reply"
                      submit_disable_with="Posting..."
                    />
                  <% end %>
                </article>
              <% end %>
            </div>
          </div>
        </div>
        <!-- End Main Profile Column -->

      <!-- Right Sidebar - Media Gallery -->
        <%= if !Enum.empty?(all_media) do %>
          <div class="hidden lg:block w-72 flex-shrink-0 space-y-4">
            <div class="card border border-base-300 rounded-lg overflow-hidden sticky top-36 self-start">
              <div class="px-4 py-3 border-b border-base-300">
                <h3 class="font-semibold flex items-center gap-2">
                  <.icon name="hero-photo" class="w-4 h-4" /> Media
                </h3>
              </div>
              <div class="p-2">
                <div class="grid grid-cols-3 gap-1">
                  <%= for {media, idx} <- Enum.with_index(all_media) do %>
                    <button
                      type="button"
                      phx-click="open_image_modal"
                      phx-value-url={media.url}
                      phx-value-images={Jason.encode!(Enum.map(all_media, & &1.url))}
                      phx-value-index={idx}
                      phx-value-post_id={media.post_id}
                      class="aspect-square rounded overflow-hidden hover:opacity-80 transition-opacity"
                    >
                      <img
                        src={media.url}
                        alt=""
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <!-- End of nil check for @remote_actor -->
</div>

<!-- Quote Modal -->
<%= if @show_quote_modal && @quote_target_post do %>
  <div class="modal modal-open">
    <div class="modal-box max-w-2xl">
      <div class="flex items-center justify-between mb-4">
        <h3 class="font-bold text-lg">Quote Post</h3>
        <button
          type="button"
          phx-click="close_quote_modal"
          class="btn btn-ghost btn-sm btn-circle"
        >
          <.icon name="hero-x-mark" class="w-5 h-5" />
        </button>
      </div>

      <.form for={%{}} phx-submit="submit_quote" class="space-y-4">
        <div>
          <textarea
            name="content"
            placeholder="Add your thoughts..."
            class="textarea textarea-bordered w-full min-h-[100px] resize-y"
            phx-change="update_quote_content"
            phx-debounce="200"
          ><%= @quote_content %></textarea>
          <div class="text-xs text-right mt-1 opacity-60">
            {String.length(@quote_content)} characters
          </div>
        </div>

        <div class="border border-base-300 rounded-lg p-3 bg-base-200/50">
          <div class="flex items-center gap-2 mb-2 text-sm">
            <%= if @quote_target_post.sender do %>
              <span class="font-medium">
                {@quote_target_post.sender.display_name || @quote_target_post.sender.username}
              </span>
              <span class="text-xs opacity-60">@{@quote_target_post.sender.username}</span>
            <% else %>
              <%= if Ecto.assoc_loaded?(@quote_target_post.remote_actor) &&
                    @quote_target_post.remote_actor do %>
                <span class="font-medium">
                  {raw(
                    render_display_name_with_emojis(
                      @quote_target_post.remote_actor.display_name ||
                        @quote_target_post.remote_actor.username,
                      @quote_target_post.remote_actor.domain
                    )
                  )}
                </span>
                <span class="text-xs opacity-60">
                  @{@quote_target_post.remote_actor.username}@{@quote_target_post.remote_actor.domain}
                </span>
              <% end %>
            <% end %>
          </div>

          <%= if @quote_target_post.content && @quote_target_post.content != "" do %>
            <div class="text-sm line-clamp-4 opacity-80 break-words">
              {raw(render_remote_bio(@quote_target_post.content, @remote_actor.domain))}
            </div>
          <% else %>
            <div class="text-sm opacity-60">Quoted post</div>
          <% end %>
        </div>

        <div class="modal-action">
          <button type="button" phx-click="close_quote_modal" class="btn btn-ghost">
            Cancel
          </button>
          <button
            type="submit"
            class="btn btn-secondary"
            disabled={String.trim(@quote_content) == ""}
          >
            <.icon name="hero-chat-bubble-bottom-center-text" class="w-4 h-4 mr-1" /> Quote
          </button>
        </div>
      </.form>
    </div>
    <form method="dialog" class="modal-backdrop" phx-click="close_quote_modal">
      <button type="button">close</button>
    </form>
  </div>
<% end %>

<!-- Create Post Modal -->
<%= if @show_create_post && @current_user && @remote_actor do %>
  <div class="modal modal-open">
    <div class="modal-box max-w-2xl">
      <h3 class="font-bold text-lg mb-4">
        Create Post in {raw(
          render_display_name_with_emojis(
            @remote_actor.display_name || @remote_actor.username,
            @remote_actor.domain
          )
        )}
      </h3>
      <.form for={%{}} phx-submit="submit_post" class="space-y-4">
        <div class="form-control">
          <label class="label">
            <span class="label-text">Title (optional)</span>
          </label>
          <input
            type="text"
            name="title"
            placeholder="An interesting title"
            class="input input-bordered w-full"
            phx-change="update_post_title"
            value={@post_title}
          />
        </div>
        <div class="form-control">
          <label class="label">
            <span class="label-text">Content</span>
          </label>
          <textarea
            name="content"
            placeholder="What's on your mind?"
            class="textarea textarea-bordered w-full"
            rows="5"
            phx-change="update_post_content"
          ><%= @post_content %></textarea>
        </div>
        
<!-- Media Preview -->
        <%= if !Enum.empty?(@pending_media_urls) do %>
          <div class="flex items-center gap-2 p-3 bg-base-200 rounded-lg">
            <.icon name="hero-photo" class="w-5 h-5 text-secondary" />
            <span class="text-sm">{length(@pending_media_urls)} file(s) attached</span>
            <button
              type="button"
              phx-click="clear_pending_images"
              class="btn btn-ghost btn-xs ml-auto"
            >
              <.icon name="hero-x-mark" class="w-4 h-4" />
            </button>
          </div>
        <% end %>

        <div class="flex items-center gap-2">
          <button
            type="button"
            phx-click="open_image_upload"
            class="btn btn-ghost btn-sm"
            title="Add media"
          >
            <.icon name="hero-photo" class="w-5 h-5" /> Add Media
          </button>
        </div>

        <div class="modal-action">
          <button type="button" phx-click="toggle_create_post" class="btn btn-ghost">
            Cancel
          </button>
          <button type="submit" class="btn btn-secondary" phx-disable-with="Posting...">
            <.icon name="hero-paper-airplane" class="w-4 h-4 mr-1" /> Post
          </button>
        </div>
      </.form>
    </div>
    <form method="dialog" class="modal-backdrop" phx-click="toggle_create_post">
      <button>close</button>
    </form>
  </div>
<% end %>

<!-- Media Upload Modal -->
<%= if @show_image_upload_modal && @current_user do %>
  <div class="modal modal-open" style="z-index: 60;">
    <div class="modal-box max-w-2xl">
      <h3 class="font-bold text-lg mb-4">Add Media to Post</h3>

      <.form for={%{}} phx-submit="upload_community_images" phx-change="validate_community_upload">
        <!-- Media Upload Area -->
        <div class="form-control w-full mb-4">
          <label
            for={@uploads.community_attachments.ref}
            class="block border-2 border-dashed border-base-300 rounded-lg p-8 text-center cursor-pointer hover:border-secondary transition-colors"
          >
            <.live_file_input upload={@uploads.community_attachments} class="hidden" />
            <%= if Enum.empty?(@uploads.community_attachments.entries) do %>
              <.icon name="hero-photo" class="w-12 h-12 mx-auto opacity-30 mb-2" />
              <p class="text-sm opacity-70">Click to upload or drag and drop</p>
              <p class="text-xs opacity-50 mt-1">Images: JPG, PNG, GIF, WEBP</p>
              <p class="text-xs opacity-50">Videos: MP4, WEBM, OGV, MOV | Audio: MP3, WAV</p>
              <p class="text-xs opacity-50 mt-1">Up to 4 files, 50MB each</p>
            <% else %>
              <div class="space-y-4">
                <%= for {entry, idx} <- Enum.with_index(@uploads.community_attachments.entries) do %>
                  <div class="border border-base-300 rounded-lg p-3">
                    <div class="flex gap-3">
                      <.live_img_preview
                        entry={entry}
                        class="rounded-lg w-24 h-24 object-cover flex-shrink-0"
                      />
                      <div class="flex-1 min-w-0">
                        <div class="text-sm font-medium mb-2 truncate">{entry.client_name}</div>
                        <input
                          type="text"
                          name={"alt_text_#{idx}"}
                          placeholder="Add description (optional)"
                          class="input input-bordered input-sm w-full"
                          maxlength="1000"
                        />
                        <div class="text-xs opacity-60 mt-1">Helps visually impaired users</div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </label>
          <%= for entry <- @uploads.community_attachments.entries do %>
            <%= for err <- upload_errors(@uploads.community_attachments, entry) do %>
              <div class="alert alert-error mt-2">
                <span class="text-sm">{error_to_string(err)}</span>
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="modal-action">
          <button type="button" class="btn" phx-click="close_image_upload">Cancel</button>
          <button
            type="submit"
            class="btn btn-secondary"
            disabled={Enum.empty?(@uploads.community_attachments.entries)}
          >
            <.icon name="hero-check" class="w-4 h-4 mr-1" /> Add Media
          </button>
        </div>
      </.form>
    </div>
    <div class="modal-backdrop" phx-click="close_image_upload"></div>
  </div>
<% end %>

<!-- Full-size Image Modal -->
<% modal_post_id =
  @modal_post && (Map.get(@modal_post, :activitypub_id) || Map.get(@modal_post, :id))

modal_interaction = @post_interactions[modal_post_id] || %{liked: false, like_delta: 0}
modal_is_liked = Map.get(modal_interaction, :liked, false)
modal_like_count = (@modal_post && Map.get(@modal_post, :like_count)) || 0 %>
<.image_modal
  show={@show_image_modal}
  image_url={@modal_image_url}
  images={@modal_images}
  image_index={@modal_image_index}
  post={@modal_post}
  current_user={@current_user}
  is_liked={modal_is_liked}
  like_count={modal_like_count}
/>
