            # Local post (Ecto struct) - check for struct first
            is_struct(post) && Map.has_key?(post, :media_urls) && post.media_urls &&
                !Enum.empty?(post.media_urls) ->
              post.media_urls
              |> Enum.filter(fn url ->
                is_binary(url) &&
                  (String.match?(url, ~r/\.(jpe?g|png|gif|webp|svg|bmp|avif)(\?.*)?$/i) ||
                     String.match?(
                       url,
                       ~r/(\/media\/|\/images\/|\/uploads\/|\/pictrs\/|i\.imgur|pbs\.twimg|i\.redd\.it)/i
                     ))
              end)
              |> Enum.map(fn url ->
                %{url: url, post_id: post.activitypub_id || to_string(post.id)}
              end)

            # Outbox post (plain map, not struct)
            !is_struct(post) && is_map(post) && is_list(post["attachment"]) ->
              post["attachment"]
              |> Enum.filter(fn att ->
                is_map(att) && String.starts_with?(att["mediaType"] || "", "image/")
              end)
              |> Enum.map(fn att ->
                url =
                  cond do
                    is_binary(att["url"]) -> att["url"]
                    is_map(att["url"]) -> att["url"]["href"]
                    true -> nil
                  end

                %{url: url, post_id: post["id"]}
              end)
              |> Enum.reject(fn m -> is_nil(m.url) end)

            !is_struct(post) && is_map(post) && is_map(post["image"]) ->
              url =
                cond do
                  is_binary(post["image"]["url"]) -> post["image"]["url"]
                  is_map(post["image"]["url"]) -> post["image"]["url"]["href"]
                  true -> nil
                end

              if url, do: [%{url: url, post_id: post["id"]}], else: []

            true ->
              []
          end
        end)
        |> Enum.uniq_by(& &1.url)
        |> Enum.take(12) %>

